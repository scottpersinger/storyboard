<% form_for @story, :url => account_story_path(@story), :method => 'PUT' do |f| %>
  <%= f.label :title %> <%= f.text_field :title, :style => "width:80%" %>
  <br />
  <%= f.text_area :body, :style => "width:90%;height:600px" %>
  <br />
  <%= f.submit 'Save' %> <%= link_to 'cancel', account_url %>
<% end %>